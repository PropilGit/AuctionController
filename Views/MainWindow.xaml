<Window x:Class="AuctionController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:AuctionController"
        xmlns:vm="clr-namespace:AuctionController.ViewModels"
        xmlns:cmd="clr-namespace:AuctionController.Infrastructure.Commands"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="300*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Column="0" Margin="10,10,10,10" Orientation="Vertical" ItemWidth="180" >
            <Button DockPanel.Dock="Top" Height="50"
                    Content="Тест подписи на ЕФРСБ"
                    Command="{Binding CheckSignatureEFRSBCommand}"/>
        </WrapPanel>
        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                   FontSize="14" 
                   Text="{Binding Status}"/>
    </Grid>
</Window>
